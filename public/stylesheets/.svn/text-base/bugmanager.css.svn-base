@CHARSET "ISO-8859-1";

.user_action {
    text-align: left;
    background-color:#666666 ;
    font-weight: bold;
    font-size: 10pt;
}

.user_action a {
    padding: 2px;
    color: #cccccc;
}

.user_action a:hover {
   color: #ffffff;
   font-size: 11pt;
   background-color:#666666 ;
}


.page_action {
    padding: 5px;
    text-align: left;
    background-color:#fcce70;
    margin: 2px;
    font-weight: bold;
    font-size: 10pt;
}

.page_action a {
    padding: 2px;
    color: #000000;
}

.page_action a:hover {
    background-color: #000000;
    color: #fcce70;
}


.heading {
    font-size: 15pt;
    font-weight: bold;
}

.to_clarify {
    background-color: aqua;
    font-weight: bold;
}

.to_verify {
    background-color: #98fa7a;
    font-weight: bold;
}

.done {
    background-color: #00cc00;
    font-weight: bold;
}

.pending {
    background-color: #f0fe5f;
    font-weight: bold;
}

.in_progress {
    background-color:#ffff99;
    font-weight: bold;
}

.to_do {
    background-color:#dcfbfc;
}

/** Bug container styles **/

.bugContainer {
    width: 350px;
    font-family: sans-serif;
    font-size: 10pt;
    border: #008efe solid 2px;
    margin: 5px;
}

/****** Bug Container - Top container styles ************/
.bugContainer .topContainer {
    background-color: #014d8a;
    font-family: sans-serif;
    font-size: 10pt;
    font-weight: bold;
    padding: 2px;
    height: 20px;
    border: #008efe solid 1px;
    color: white;
}

.bugContainer .bugId {
    float: left;
    width: 20px;
}

.bugContainer .bugPriority {
    float: right;
}

/****** Bug Container - Center container styles ************/

.bugContainer .centerContainer {
    padding: 4px;
}

.bugContainer .bugSummary {
    padding: 5px;
    clear: both;
    font-weight: bold;
}

.bugContainer .bugIndex {
    color: gray;
    font-size: 12pt;
    float: left;
    width: 55px;
}

.bugContainer .bugStatus {
}

.bugContainer .bugReleaseNumber {
    float: right;
    font-size: 12pt;
    font-weight: bold;

}


/****** Bug Container - Bottom container styles ************/

.bugContainer .bottomContainer {
    padding: 2px;
    height: 20px;
    border: yellow solid 1px;
    background-color: #ffffcc;
}


.bugContainer .bugDeveloper {
    float: left;
    width: 20px;
    width: 50%;
    font-size: 12pt;
    font-weight:bold;
    color: gray;
}


.bugContainer .bugActions {
    font-size: 10pt;
    text-align: right;
    color: black;
    vertical-align: text-bottom;
    float: right;
}

.bugContainer a {
    color: darkslategray;
    text-decoration: underline;
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 5px;
    padding-right: 2px;
}

.bugContainer a:hover {
    color: white;
    background-color: black;

}



/** Custom div for displaying errors. Used in bugs index page **/
.errorDiv {
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

.errorDiv h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  background-color: #c00;
  color: #fff;
}

.errorDiv p {
  color: #333;
  margin-bottom: 0;
  padding: 5px;
}

.errorDiv ul li {
  font-size: 12px;
  list-style: square;
}


.bugImage {
    position: absolute;
    right:-40px;
    top: 20px;
}


#container td {
    border: #58c5fe 1px solid;
}

.active {
    background-color: green;
    color: white;
    font-weight: bold;
}

.inactive {
    background-color: red;
    color: white;
    font-weight: bold;
}