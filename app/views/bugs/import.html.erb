<h1>Import bugs</h1>

<% form_for :dump, :url=>{:controller=>"bugs",
                          :action=>"perform_import"},
            :html => { :multipart => true } do |f| -%>
    <table>
    <tr>
      <td>
        <%= f.label :file, "Select a CSV File" %>
      </td>
      <td>
        <%= f.file_field :file -%>
      </td>
    </tr>
    <tr>
      <td colspan='2'>
        <%= submit_tag 'Submit' -%>
      </td>
    </tr>
    </table>
<% end -%>

<%= link_to 'Back', bugs_path %>