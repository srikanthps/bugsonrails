<h1>Comments Manager</h1>

<table>
  <tr>
  </tr>

  <%
     index = 0
     @comments.each do |comment|
         index = index + 1
  %>
      <tr>
        <td width="1%" style="background-color: black; color:white; text-align: center"><%= h index %></td>
        <td width="5%"><%= h comment.bug.defect_id if comment.bug %></td>
        <td width="10%"><%= h comment.commenter.nickname %></td>
        <td width="40%"><%= h comment.body %></td>

        <td valign="top" style="padding-left: 10px">
          <div id="comments_links_<%= h index %>">
            <%= render "comments_manage_links", :comment => comment, :comment_index => index %>
          </div>
        </td>


      </tr>
      <tr>
        <td colspan="7" style="border-top: 2px solid green"></td>
      </tr>
  <% end %>
</table>

<br/>

